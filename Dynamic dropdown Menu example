function getBusRoutes(){
	var arrayOfRoutes = ["23", "Gold", "blue"];  //this should be some 
	
	
	//handles if list is empty
	if(arrayOfRoutes == NaN){
		document.write("no routes available");
		//maybe ask to select another rout
		
	}
	
	return arrayOfRoutes;
}

function populateBusRoutes(){
	 document.write("I am in the populate method<br>");
	 document.write("ArrOfRoutes Length: " + arrOfRoutes.length +"<br>");
	 var doc = document.getElementById("myRoute");
	 document.write("doc Value: "+ doc +"<br>");
	for (index = 0; index < arrOfRoutes.length; index++){
		document.write("I am in the for loop<br>");
		document.write("Index: " + index + "<br>");
		var opt = document.createElement('option');
		opt.innerHTML = arrOfRoutes[index];
		opt.value = arrOfRoutes[index];
		doc.appendChild(opt);
		document.write("new" +arrOfRoutes[index] + "<br />");
	}

}

</script>

